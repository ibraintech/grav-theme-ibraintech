{% extends 'partials/base.html.twig' %}

{% block content %}
<section class="hero">
  <div class="hero-body">
    <div class="container">
      <div class="content">
        <div class="columns">
          <div class="column is-2 has-text-centered">
            {% if page.media[page.header.photo] %}
            {{ page.media[page.header.photo].html }}
            {% else %}
            <img src="//placehold.it/162?text=NO+PHOTO" />
            {% endif %}
          </div>
          <div class="column">
            <h3 class="title is-3">{{ page.title }}</h3>
            <h4 class="subtitle heading is-5">{{ page.header.job }}</h4>
            {% if page.header.email %}
            {{ page.header.email|safe_email }}
            {% endif %}
            <nav class="level">
              <div class="level-left">
                {% for social in page.header.social %}
                <a class="level-item" href="{{ social.link }}">
                  <span class="icon"><i class="fa fa-{{ social.icon }}"></i></span>
                </a>
                {% endfor %}
              </div>
            </nav>
          </div>
        </div>
      </div>
      <div class="content">
        {{ page.content }}
      </div>
    </div>
  </div>
</section>
{% endblock %}
