<div class="column is-12">
  <div class="card">
    <div class="card-header">
      <p class="card-header-title">{{ 'RESEARCHER_THEME.PAGES.RESUME.INTERESTS.SECTION'|t }}</p>
    </div>
    <div class="card-content">
      {% for interest in header.resume_interests %}
      <div class="media">
        <div class="media-content">
          <strong>{{ interest.name }}</strong>
          <div class="tags">
            {% for keyword in interest.keywords|sort %}
            <span class="tag is-{{ theme_config.primary_color }}"><i class="fas fa-tags"></i>&nbsp;{{ keyword }}</span>
            {% endfor %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
