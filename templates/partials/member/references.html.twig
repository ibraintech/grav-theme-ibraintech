<div class="column is-12">
  <div class="card">
    <div class="card-header">
      <div class="card-header-title">{{ 'RESEARCHER_THEME.PAGES.RESUME.REFERENCES.SECTION'|t }}</div>
      <div class="card-header-icon">
        <span class="icon">
          <i class="fas fa-quote-right" aria-hidden="true"></i>
        </span>
      </div>
    </div>
    <div class="card-content">
      {% for reference in header.resume_references %}
        <div class="media">
          <div class="media-content">
            <div class="content">
              <blockquote class="is-{{ theme_config.primary_color }}">
                <p><strong>{{ reference.name }}</strong></p>
                <p>{{ reference.reference }}</p>
              </blockquote>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
