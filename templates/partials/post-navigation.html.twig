{% set progress = page.parent.collection() %}
<div class="level is-mobile">
  <div class="level-left">
    {% if not progress.isFirst(page.path) %}
      <div class="level-item">
        <a class="button is-white" href="{{ progress.nextSibling(page.path).url }}">
          <span class="icon">
            <i class="fas fa-chevron-left" aria-hidden="true"></i>
          </span>
          <span>{{ 'RESEARCHER_THEME.FRONTEND.PREVIOUS'|t }}</span>
        </a>
      </div>
    {% endif %}
  </div>
  <div class="level-right">
    {% if not progress.isLast(page.path) %}
      <div class="level-item">
        <a class="button is-white" href="{{ progress.prevSibling(page.path).url }}">
          <span>{{ 'RESEARCHER_THEME.FRONTEND.NEXT'|t }}</span>
          <span class="icon">
            <i class="fas fa-chevron-right" aria-hidden="true"></i>
          </span>
        </a>
      </div>
    {% endif %}
  </div>
</div>
