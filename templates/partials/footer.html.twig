<footer class="hero is-{{ theme_config.primary_color }}">
  <div class="hero-body">
    <div class="container">
      <div class="level">
        <div class="level-left">
          <div class="level-item is-hidden-mobile">
            <span class="icon is-medium"><i class="fa fa-rocket"></i></span>
          </div>
          <div class="level-item">
            <div>
              <!-- TODO: replace SPACE with Site title -->
              <p>&copy; {{ theme_config.initial.date|date("Y") }} &mdash; {{ "now"|date("Y") }} <a href="{{ base_url }}">{{ site.title|e('html') }}</a></p>
              <p class="is-size-7">
                Developed by <a href="https://leonidboykov.com">Leonid Boykov</a>. Powered by <a href="https://getgrav.com">Grav</a> and <a href="https://github.com/leonidboykov/grav-theme-researcher">Researcher</a>
              </p>
            </div>
          </div>
        </div>
        <div class="level-right is-hidden-mobile">
          {% for page in pages.children.visible %}
          {% set current_page = (page.active or page.activeChild) ? 'is-active' : '' %}
            <a class="level-item" href="{{ page.url }}">{{ page.menu }}</a>
          {% endfor %}
          <a class="level-item scrollToTop">{{ "SCROLL_TO_TOP"|t }}</a>
        </div>

      </div>
    </div>
  </div>
</footer>
